<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CharacterBodySelectFragment"
    android:background="@color/transparent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.5">
            <ImageButton
                android:id="@+id/body_color_one_btn"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintWidth_percent="0.35"
                app:layout_constraintHeight_percent="0.35"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/body_color_two_btn"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintVertical_bias="0"
                android:src="@drawable/one_btn_click"
                android:background="@color/transparent"
                android:scaleType="fitCenter"/>

            <ImageButton
                android:id="@+id/body_color_two_btn"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintWidth_percent="0.35"
                app:layout_constraintHeight_percent="0.35"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintVertical_bias="0"
                android:src="@drawable/two_btn_nonclick"
                android:background="@color/transparent"
                android:scaleType="fitCenter"/>

            <ImageButton
                android:id="@+id/body_color_three_btn"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintWidth_percent="0.35"
                app:layout_constraintHeight_percent="0.35"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/body_color_two_btn"
                app:layout_constraintVertical_bias="0"
                android:src="@drawable/three_btn_nonclick"
                android:background="@color/transparent"
                android:scaleType="fitCenter"/>

            <ImageButton
                android:id="@+id/body_color_four_btn"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintWidth_percent="0.35"
                app:layout_constraintHeight_percent="0.35"
                app:layout_constraintTop_toBottomOf="@id/body_color_one_btn"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/body_color_five_btn"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintVertical_bias="1"
                android:src="@drawable/four_btn_nonclick"
                android:background="@color/transparent"
                android:scaleType="fitCenter"/>

            <ImageButton
                android:id="@+id/body_color_five_btn"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintWidth_percent="0.35"
                app:layout_constraintHeight_percent="0.35"
                app:layout_constraintTop_toBottomOf="@id/body_color_two_btn"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintVertical_bias="1"
                android:src="@drawable/five_btn_nonclick"
                android:background="@color/transparent"
                android:scaleType="fitCenter"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>



</FrameLayout>